<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/watch_ai_bg" />

    <com.oppo.marketdemo.custom.TextureVideoView
        android:id="@+id/texture_video_view3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" />


    <ImageView
        android:id="@+id/iv_watch_ai_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="71dp"
        android:src="@mipmap/watch_ai_bg_one"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="71dp"
        android:layout_marginRight="48dp"
        android:orientation="vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.oppo.marketdemo.custom.textview.TypefaceTextView
            android:id="@+id/watch_ai_bt_video"
            android:layout_width="69dp"
            android:layout_height="74dp"
            android:background="@mipmap/watch_ai_button_video"
            android:gravity="center"
            android:text="@string/watch_bt_ai_view"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            app:typeface_style="normal" />

        <!--第一个表盘与提示-->
        <FrameLayout
            android:id="@+id/fl_watch_one"
            android:layout_width="69dp"
            android:layout_height="74dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/watch_ai_bt_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/watch_ai_button_one" />

            <ImageView
                android:id="@+id/watch_ai_bt_cover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rotationY="180"
                android:scaleType="fitXY"
                android:src="@mipmap/watch_ai_cover"
                android:visibility="gone" />

            <com.oppo.marketdemo.custom.textview.TypefaceTextView
                android:id="@+id/tv_watch_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:drawableTop="@mipmap/watch_tip"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="@string/watch_bt_ai_tip"
                android:textColor="@color/color63ffffff"
                android:textSize="7sp"
                android:visibility="gone"
                app:typeface_style="normal" />


        </FrameLayout>

        <!--第二表盘-->
        <ImageView
            android:id="@+id/watch_ai_bt_two"
            android:layout_width="69dp"
            android:layout_height="74dp"
            android:layout_marginTop="8dp"
            android:src="@mipmap/watch_ai_button_two" />

        <!--第三表盘-->
        <ImageView
            android:id="@+id/watch_ai_bt_three"
            android:layout_width="69dp"
            android:layout_height="74dp"
            android:layout_marginTop="8dp"
            android:src="@mipmap/watch_ai_button_three" />

        <!--第四表盘-->
        <ImageView
            android:id="@+id/watch_ai_bt_four"
            android:layout_width="69dp"
            android:layout_height="74dp"
            android:layout_marginTop="8dp"
            android:src="@mipmap/watch_ai_button_four" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
