<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/power_saving_chat" />

    <com.oppo.marketdemo.custom.TextureVideoView
        android:id="@+id/texture_video_view1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/power_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <com.oppo.marketdemo.custom.textview.TypefaceTextView
            android:id="@+id/tv_saving_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="31dp"
            android:layout_marginTop="335dp"
            android:textColor="@color/color65c694"
            android:text="@string/power_saving_open"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typeface_style="bold" />

        <com.oppo.marketdemo.custom.textview.TypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color18191a"
            android:text="@string/power_saving_mode"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/tv_saving_on"
            app:layout_constraintTop_toBottomOf="@id/tv_saving_on"
            app:typeface_style="bold" />
        <com.oppo.marketdemo.custom.textview.TypefaceTextView
            android:id="@+id/tv_saving_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="207dp"
            android:layout_marginTop="335dp"
            android:text="@string/power_saving_close"
            android:textSize="17sp"
            android:textColor="@color/colorda864e"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typeface_style="bold" />
        <com.oppo.marketdemo.custom.textview.TypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color18191a"
            android:text="@string/power_saving_mode"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/tv_saving_off"
            app:layout_constraintTop_toBottomOf="@id/tv_saving_off"
            app:typeface_style="bold" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.oppo.marketdemo.custom.textview.TypefaceTextView
        android:id="@+id/tv_chating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="239dp"
        android:text="@string/power_saving_chat"
        android:textSize="11sp"
        android:textColor="@color/color65c694"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typeface_style="mid" />

</androidx.constraintlayout.widget.ConstraintLayout>
