<?xml version="1.0" encoding="utf-8"?>
<com.oppo.marketdemo.custom.ScaleLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.oppo.marketdemo.custom.FitXYImageView
            android:id="@+id/fit_xy_image_view"
            android:layout_width="252dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:scaleType="fitXY"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/home_item_arrow"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40.67dp"/>

        <View
            android:id="@+id/item_flag"
            android:layout_width="16.67dp"
            android:layout_height="2.67dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/home_item_flag"/>

        <com.oppo.marketdemo.custom.textview.TypefaceTextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="21.34sp"
            android:layout_gravity="center_horizontal|bottom"
            android:gravity="center"
            android:layout_marginBottom="36dp" />

    </FrameLayout>

</com.oppo.marketdemo.custom.ScaleLayout>