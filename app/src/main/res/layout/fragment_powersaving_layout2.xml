<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/power_saving_navigation" />

    <com.oppo.marketdemo.custom.TextureVideoView
        android:id="@+id/texture_video_view2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/power_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <com.oppo.marketdemo.custom.textview.TypefaceTextView
            android:id="@+id/tv_saving_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="31dp"
            android:layout_marginTop="342dp"
            android:text="@string/power_saving_open"
            android:textColor="@color/color65c694"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typeface_style="bold" />

        <com.oppo.marketdemo.custom.textview.TypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/power_saving_mode"
            android:textColor="@color/color18191a"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/tv_saving_on"
            app:layout_constraintTop_toBottomOf="@id/tv_saving_on"
            app:typeface_style="bold" />

        <com.oppo.marketdemo.custom.textview.TypefaceTextView
            android:id="@+id/tv_saving_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="207dp"
            android:layout_marginTop="342dp"
            android:text="@string/power_saving_close"
            android:textColor="@color/colorda864e"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typeface_style="bold" />

        <com.oppo.marketdemo.custom.textview.TypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/power_saving_mode"
            android:textColor="@color/color18191a"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/tv_saving_off"
            app:layout_constraintTop_toBottomOf="@id/tv_saving_off"
            app:typeface_style="bold" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
