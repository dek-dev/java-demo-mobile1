<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.oppo.marketdemo.custom.textview.TypefaceTextView
            android:id="@+id/base_menu_text_title"
            android:layout_gravity="center_vertical"
            style="@style/MenuTextContentStyle"
            android:text="@string/main_selling_point1"
            app:typeface_style="normal" />

        <FrameLayout
            android:layout_marginTop="2.5dp"
            android:background="@color/colorWhite"
            android:id="@+id/fl_scroll"
            android:layout_gravity="center|right"
            android:layout_marginRight="34dp"
            android:layout_width="wrap_content"
            android:layout_height="22dp">

            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/rounded_side_normal"
                android:layout_width="4dp"
                android:layout_height="15dp"/>
        </FrameLayout>

    </FrameLayout>

</FrameLayout>