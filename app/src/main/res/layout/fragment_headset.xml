<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="ContentDescription">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_page_w51"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RadioGroup
        android:id="@+id/view_pager_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="114dp"
        android:layout_marginTop="477dp"
        android:layout_marginEnd="114dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0">

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:clickable="true"
            android:background="@null"
            android:drawableTop="@drawable/icon_w51_color_selector1"
            android:enabled="true"
            android:focusable="true"
            android:text="@string/headset_w51_write"
            android:gravity="center"
            android:textColor="@drawable/icon_watch_color_text_selector"
            android:textSize="13sp"
            android:drawablePadding="1dp"
         />

        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_weight="1"
            android:background="@null"
            android:textSize="13sp"
            android:textColor="@drawable/icon_watch_color_text_selector"
            android:drawablePadding="1dp"
            android:button="@null"
            android:clickable="true"
            android:drawableTop="@drawable/icon_w51_color_selector2"
            android:enabled="true"
            android:focusable="true"
            android:text="@string/headset_w51_black"
            android:gravity="center"
           />

        <RadioButton
            android:id="@+id/radio3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:textSize="13sp"
            android:background="@null"
            android:drawablePadding="1dp"
            android:layout_weight="1"
            android:textColor="@drawable/icon_watch_color_text_selector"
            android:text="@string/headset_w51_blue"
            android:button="@null"
            android:clickable="true"
            android:drawableTop="@drawable/icon_w51_color_selector3"
            android:enabled="true"
            android:focusable="true"
            android:gravity="center"
           />

    </RadioGroup>

    <FrameLayout
        android:id="@+id/fl_next"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_page"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.oppo.marketdemo.custom.ViewPagerIndicator
            android:id="@+id/dot_horizontal_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/indicator_mar_bottom"
            app:layout_constraintBottom_toBottomOf="parent" />

    </FrameLayout>


    <com.oppo.marketdemo.custom.textview.TypefaceTextView
        android:id="@+id/tv_button"
        style="@style/bt_first_page_button"
        android:text="@string/bt_tap_more"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>