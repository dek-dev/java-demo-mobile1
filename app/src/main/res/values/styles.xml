<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->

    <style name="AppTheme.Product" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorTransparent</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:ignore="NewApi">shortEdges</item>
        <item name="android:windowEnterAnimation">@anim/parameter_in</item>
    </style>

    <!--二级页面-->
    <style name="two_pager_one_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color343434</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginLeft">23dp</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <!--按钮的style-->
    <style name="bt_first_page_button">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:layout_marginBottom">45dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/fragment_button_f7ca49_bg</item>
    </style>

    <style name="two_pager_two_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorB3000000</item>
        <item name="android:textSize">11.3sp</item>
        <item name="android:layout_marginLeft">23dp</item>
        <item name="android:layout_marginTop">15.3dp</item>
    </style>

    <style name="FragmentTitleAndContentStyle">
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingEnd">40dp</item>
    </style>

    <style name="FragmentTitleAndSmallStyle">
        <item name="android:layout_marginTop">540dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="FragmentTitleStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="FragmentSmallTitleStyle">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorRedC52f13</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="FragmentContentFrameLayoutStyle">
        <item name="android:layout_marginTop">14dp</item>

    </style>

    <style name="FragmentContentStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!--侧边栏大卖点标题frameLayout-->

    <!--侧边栏卖点选项frameLayout-->

    <!--侧边栏大卖点文案TextView-->
    <style name="MenuTextTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">70dp</item>
        <item name="android:layout_marginEnd">60dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorBlack3</item>
    </style>

    <!--侧边栏卖点文案TextView-->
    <style name="MenuTextContentStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginStart">70dp</item>
        <item name="android:layout_marginEnd">45dp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/colorBlack6</item>
    </style>

    <!--按钮的style-->
    <style name="OnceButtonStyle">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:layout_marginBottom">45dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/fragment_button_f7ca49_bg</item>
    </style>


    <!--其他，高迪对比的style-->
    <!--Guadi-->
    <style name="compare_point_guadi">
        <item name="android:layout_marginStart">90dp</item>
        <item name="android:layout_marginTop">88dp</item>
        <item name="android:layout_marginBottom">690dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/color3d3d3d</item>
    </style>
    <!--other-->
    <style name="compare_point_other">
        <item name="android:layout_marginStart">250dp</item>
        <item name="android:layout_marginTop">88dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">690dp</item>
        <item name="android:textColor">@color/color3d3d3d</item>
    </style>


</resources>