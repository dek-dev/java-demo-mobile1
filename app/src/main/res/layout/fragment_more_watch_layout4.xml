<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorebeff0">

    <ImageView
        android:id="@+id/iv_endurance"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/watch_bg4_1" />

    <ImageView
        android:id="@+id/iv_endurance_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="304dp"
        android:layout_marginRight="45dp"
        android:visibility="gone"
        android:src="@mipmap/ic_endurance_bt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.oppo.marketdemo.custom.TextureVideoView
        android:id="@+id/texture_video_view2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" />


    <FrameLayout
        android:id="@+id/ll_text"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginLeft="261dp"
        android:layout_marginTop="390dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.oppo.marketdemo.custom.textview.TypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/colorBlack353535"
            android:textSize="11sp"
            app:typeface_style="normal" />

        <com.oppo.marketdemo.custom.textview.TypefaceTextView
            android:layout_width="wrap_content"
            android:layout_gravity="bottom"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/colorBlack353535"
            android:textSize="13sp"
            app:typeface_style="mid"

            />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
