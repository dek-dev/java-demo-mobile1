<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:ignore="ContentDescription">


    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/bg_samll_decide" />

    <com.oppo.marketdemo.custom.ExoVideoView
        android:id="@+id/texture_video_view8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    />

    <com.oppo.marketdemo.custom.textview.TypefaceTextView
    android:id="@+id/iv_tip1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="344dp"
    android:layout_marginEnd="259dp"
    android:background="@mipmap/decide_tip1"
    android:gravity="center_vertical"
    android:paddingLeft="15dp"
    android:text="@string/small_decide_tip1"
    android:textColor="@color/colorWhite"
    android:textSize="7sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:typeface_style="normal" />
    <com.oppo.marketdemo.custom.textview.TypefaceTextView
        android:id="@+id/iv_tip2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="384dp"
        android:layout_marginEnd="259dp"
        android:background="@mipmap/decide_tip3"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="@string/small_decide_tip2"
        android:textColor="@color/colorWhite"
        android:textSize="7sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typeface_style="normal" />

    <com.oppo.marketdemo.custom.textview.TypefaceTextView
        android:id="@+id/iv_tip3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="424dp"
        android:layout_marginEnd="259dp"
        android:background="@mipmap/decide_tip2"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="@string/small_decide_tip3"
        android:textColor="@color/colorWhite"
        android:textSize="7sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typeface_style="normal" />
</androidx.constraintlayout.widget.ConstraintLayout>